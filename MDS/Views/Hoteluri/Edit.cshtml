@model MDS.Models.Hotel


<h2 class="text-center mt-5">Modificare Hotel</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" action="/Hoteluri/Edit/@Model.Id">

                @Html.Label("Nume", "Nume Hotel")
                <br />
                @Html.TextBox("Nume", null, new { @class = "form-control" })
                <br /><br />

                @Html.Label("Locatie", "Adresa")
                <br />
                @Html.TextBox("Locatie", null, new { @class = "form-control" })

                @Html.Label("Facilitati", "Facilitati Hotel")
                <br />
                @Html.TextArea("Facilitati", Model.Facilitati, new { @class = "form-control summernote" })
                @Html.ValidationMessageFor(m => m.Facilitati, null, new { @class = "text-danger" })
                <br /><br />

                <br /><br />

                <label>Selectati tara</label>
                @Html.DropDownListFor(m => m.TaraId, new SelectList(Model.Tari, "Value", "Text"),
                "Selectati tara", new { @class = "form-control" })
                <br />

                <button class="btn btn-success" type="submit">Modifica Hotelul</button>

            </form>
        </div>
    </div>
</div>