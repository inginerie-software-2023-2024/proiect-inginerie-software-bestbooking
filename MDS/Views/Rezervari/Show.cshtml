﻿@{
    var reservation = ViewBag.Reservation as MDS.Models.Rezervare;
    var camera = ViewBag.Camera as MDS.Models.Camera;
    }


    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Detalii Rezervare</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4>Clienti</h4>
                    <hr />
                    <ul class="list-group list-group-flush">
                        @foreach (var client in reservation.ListaClienti.Split(","))
                        {
                            <li class="list-group-item">@client</li>
                        }
                    </ul>
                </div>
                <div class="col-md-6">
                    <h4>Detalii camera</h4>
                    <hr />
                    @if (camera != null)
                    {
                        <p><strong>Nume:</strong> <span class="text-muted">@camera.Nume</span></p>
                        <p><strong>Capacitate:</strong> <span class="text-muted">@camera.Capacitate</span></p>
                        <p><strong>Pret pe noapte:</strong> <span class="text-muted">@camera.PretNoapte</span></p>
                    }
                    else
                    {
                        <p>Camera nu este disponibila</p>
                    }
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <h4>Check-in</h4>
                    <hr />
                    <p class="text-muted">@Html.Raw(reservation.CheckIn)</p>
                </div>
                <div class="col-md-6">
                    <h4>Check-out</h4>
                    <hr />
                    <p class="text-muted">@Html.Raw(reservation.CheckOut)</p>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <h4>Suma</h4>
                    <hr />
                    <p class="text-muted">@Html.Raw(reservation.Suma)</p>
                </div>
                <div class="col-md-6">
                    <h4>Timp ocupat</h4>
                    <hr />
                    <p class="text-muted">@Html.Raw(reservation.CheckOut - reservation.CheckIn)</p>
                </div>
            </div>
            <hr />
            @if (reservation.UserId == ViewBag.UserCurent || ViewBag.EsteAdmin)
            {
                <div class="d-flex justify-content-between">
                    <div>
                        <a class="btn btn-primary" href="/Rezervari/Edit/@reservation.Id"><i class="bi bi-pencil-square"></i>Editeaza</a>
                    </div>
                    <div>
                        <form method="post" action="/Rezervari/Delete/@reservation.Id">
                            <button class="btn btn-danger" type="submit"><i class="bi bi-trash"></i>Sterge</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>