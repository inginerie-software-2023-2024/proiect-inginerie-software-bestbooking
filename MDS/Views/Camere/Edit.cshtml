@model MDS.Models.Camera

<h2 class="text-center mt-5">Editare camera</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            <form method="post" action="/Camere/Edit/@Model.Id">

                @Html.Label("Nume", "Nume Camera")
                <br />
                @Html.EditorFor(m => m.Nume, new { htmlAttributes = new { @class = "form-control" } })
                <br /><br />
                @Html.Label("Capacitate", "Capacitate Camera")
                <br />
                @Html.EditorFor(m => m.Capacitate, new { htmlAttributes = new { @class = "form-control" } })
                <br /><br />
                @Html.Label("Descriere", "Descriere Articol")
                <br />
                @Html.TextArea("Descriere", null, new { @class = "summernote" })
                @*@Html.Editor("Content", new { htmlAttributes = new { @class = "form-control" } })*@
                <br /><br />
                @Html.Label("PretNoapte", "Tarif Camera")
                <br />
                @Html.EditorFor(m => m.PretNoapte, new { htmlAttributes = new { @class = "form-control" } })
                <br /><br />

                <label>Selectati categoria</label>
                @Html.DropDownListFor(m => m.HotelId,
                new SelectList(Model.Hoteluri, "Value", "Text"),
                "Selectati Hotelul", new { @class = "form-control" })
                <br />
                <button class="btn btn-sm btn-success" type="submit">Modifica camera</button>

            </form>
        </div>
    </div>
</div>