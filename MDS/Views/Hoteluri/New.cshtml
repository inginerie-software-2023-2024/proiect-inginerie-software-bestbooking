@model MDS.Models.Hotel


<h2 class="text-center mt-5">Adaugare Hotel</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" action="/Hoteluri/New">

                @Html.Label("Nume", "Nume Hotel")
                <br />
                @Html.TextBox("Nume", null, new { @class = "form-control" })
                <br /><br />

                @Html.Label("Locatie", "Adresa")
                <br />
                @Html.TextBox("Locatie", null, new { @class = "form-control" })


                @Html.Label( "DATI ENTER DUPA FIECARE INSERARE DE IMAGINE/VIDEO"  )
                <br />
                <br />
                @Html.Label("Facilitati", "Facilitati Hotel")
                <br />
                @Html.TextArea("Facilitati", null, new { @class = "summernote" })

                @Html.ValidationMessage("Facilitati", null, new { @class = "text-danger" })
                <br /><br />

                <br /><br />

                <label>Selectati tara</label>
                @Html.DropDownListFor(m => m.TaraId, new SelectList(Model.Tari, "Value", "Text"),
                "Selectati tara", new { @class = "form-control" })
                <br />

                <button class="btn btn-success" type="submit">Adauga Hotelul</button>

            </form>
        </div>
    </div>
</div>