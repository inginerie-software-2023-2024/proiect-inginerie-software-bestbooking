﻿

<head>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .custom-header {
            font-family: 'Lobster', cursive;
            color: #ff6600;
        }

        .custom-text {
            font-family: 'Lobster', cursive;
        }

        .custom-button {
            font-family: 'Lobster', cursive;
            background-color: #3399ff;
            color: #ffffff;
            border: 2px solid #3399ff;
            padding: 10px 20px;
            font-size: 16px;
        }

            .custom-button:hover {
                background-color: #1a8cff;
                color: #000000;
                border-color: #1a8cff;
            }

        .custom-textbox {
            font-family: 'Lobster', cursive;
            background-color: #cce6ff;
            border: 1px solid #0080ff;
            padding: 8px;
            font-size: 14px;
        }

            .custom-textbox::placeholder {
                color: #1a8cff; /* Set the color of the placeholder text */
            }

        .btn-primary {
            background-color: #007bff;
        }

        .card-footer {
            display: flex;
            justify-content: center;
        }

    </style>
</head>

<br />
<br />

<div class="row">
    @foreach (var user in ViewBag.UsersList)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p class="custom-header"><i class="bi bi-person"> </i> UserName: @user.UserName</p>

                        <p class="custom-header"><i class="bi bi-envelope"></i> Email utilizator: @user.Email</p>


                        @if (@user.Nume != null)
                        {
                            <p class="custom-text"><i class="bi bi-person"> </i> Nume utilizator: @user.Nume</p>
                        }


                        @if (@user.Prenume != null)
                        {
                            <p class="custom-text"><i class="bi bi-person"> </i> Prenume utilizator: @user.Prenume</p>
                        }


                    </div>
                    @*
                <div class="d-flex flex-row justify-content-between p-3">

                <div> <a class="btn btn-sm btn-success custom-button" href="/Users/Edit/@user.Id"> Editează</a> </div>

                <div> <a class="btn btn-sm btn-success custom-button" href="/Users/Show/@user.Id"> Vizualizează</a> </div>

                </div> *@
                </div>

            </div>
        </div>
    }

</div>

